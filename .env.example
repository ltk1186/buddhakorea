# LLM API Keys (at least one required)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Model Configuration
LLM_MODEL=claude-3-5-sonnet-20241022
# Alternatives: gpt-4o-mini, gpt-4o, claude-3-5-sonnet-20241022

EMBEDDING_MODEL=BAAI/bge-m3
# Alternatives: sentence-transformers/paraphrase-multilingual-mpnet-base-v2, text-embedding-3-large (OpenAI)
# bge-m3: 15-20% better accuracy for Classical Chinese (75-80% vs 60-70%)

# Vector Database
CHROMA_DB_PATH=./chroma_db

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Settings (for buddhakorea.com integration)
ALLOWED_ORIGINS=http://localhost:8000,https://buddhakorea.com,https://www.buddhakorea.com

# Rate Limiting
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=info
# Options: debug, info, warning, error

# Retrieval Configuration
TOP_K_RETRIEVAL=10
MAX_CONTEXT_TOKENS=8000

# Chunking Configuration (optimized for accuracy)
# Research shows 1024 tokens provides 72-75% accuracy vs 68% for 512 tokens
CHUNK_SIZE=1024
CHUNK_OVERLAP=200

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
