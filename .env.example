# ============================================================
# Buddha Korea - Environment Variables Template
# ============================================================
# 사용법: cp .env.example .env 후 값 수정
# ============================================================

# ==========================================
# LLM API Keys (최소 하나 필수)
# ==========================================
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GEMINI_API_KEY=

# Pali Studio Translation
PALI_GEMINI_API_KEY=

# GCP Vertex AI (선택사항)
GCP_PROJECT_ID=your-gcp-project-id
GCP_LOCATION=us-central1
USE_GEMINI_FOR_QUERIES=true

# ==========================================
# Model Configuration
# ==========================================
LLM_MODEL=claude-3-5-sonnet-20241022
# Options: gpt-4o-mini, gpt-4o, claude-3-5-sonnet-20241022, gemini-2.5-pro

EMBEDDING_MODEL=BAAI/bge-m3
# Options: BAAI/bge-m3, sentence-transformers/paraphrase-multilingual-mpnet-base-v2

# ==========================================
# Vector Database (ChromaDB)
# ==========================================
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=cbeta_sutras_gemini

# ==========================================
# API Configuration
# ==========================================
API_HOST=0.0.0.0
API_PORT=8000
ALLOWED_ORIGINS=http://localhost:8000,http://localhost:3000

# Rate Limiting
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=debug
# Options: debug, info, warning, error

# ==========================================
# Retrieval Configuration
# ==========================================
TOP_K_RETRIEVAL=10
MAX_CONTEXT_TOKENS=8000

# Chunking
CHUNK_SIZE=1024
CHUNK_OVERLAP=200

# ==========================================
# Authentication & Security
# ==========================================
# Generate with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-generate-with-command-above

# Cookie domain (leave empty for localhost)
COOKIE_DOMAIN=

# ==========================================
# Social Login (선택사항)
# ==========================================
# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Naver OAuth
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# Kakao OAuth
KAKAO_CLIENT_ID=
KAKAO_CLIENT_SECRET=

# ==========================================
# Database (PostgreSQL)
# ==========================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=buddhakorea

# Docker Compose용 (자동 설정됨)
# DATABASE_URL=postgresql+asyncpg://postgres:postgres@postgres:5432/buddhakorea

# ==========================================
# Redis (Docker Compose용)
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-redis-password
REDIS_DB=0
