{
  "version": "1.0",
  "description": "Period normalization mapping - 257+ variations to 14 canonical categories + fallback",
  "canonical_categories": [
    "초기불교",
    "부파불교",
    "후한",
    "삼국",
    "서진",
    "동진",
    "남북조",
    "수",
    "당",
    "오대십국",
    "송",
    "원",
    "명",
    "청"
  ],
  "fallback_categories": ["기타", "미상"],
  "category_info": {
    "초기불교": {"range": "BCE 5C - CE 1C", "description": "붓다 재세시 ~ 부파불교 성립 이전"},
    "부파불교": {"range": "BCE 3C - CE 2C", "description": "부파불교 시대, 아비달마 성립기"},
    "후한": {"range": "25 - 220", "description": "중국 후한 시대"},
    "삼국": {"range": "220 - 280", "description": "위촉오 삼국 시대"},
    "서진": {"range": "265 - 316", "description": "중국 서진 시대"},
    "동진": {"range": "317 - 420", "description": "중국 동진 시대"},
    "남북조": {"range": "420 - 589", "description": "남조(송제양진) + 북조(북위 등)"},
    "수": {"range": "581 - 618", "description": "중국 수나라"},
    "당": {"range": "618 - 907", "description": "중국 당나라"},
    "오대십국": {"range": "907 - 979", "description": "오대십국 시대"},
    "송": {"range": "960 - 1279", "description": "북송 + 남송"},
    "원": {"range": "1271 - 1368", "description": "원나라"},
    "명": {"range": "1368 - 1644", "description": "명나라"},
    "청": {"range": "1644 - 1912", "description": "청나라"},
    "기타": {"range": "-", "description": "한국, 일본, 티베트 등 동아시아"},
    "미상": {"range": "-", "description": "시대를 특정할 수 없는 경우"}
  },
  "pattern_rules": [
    {
      "target": "초기불교",
      "patterns": ["초기불교", "초기 불교", "인도 초기", "고대 인도"],
      "regex": "초기\\s*불교|초기\\s*대승|early\\s*buddhism",
      "priority": 1
    },
    {
      "target": "부파불교",
      "patterns": ["부파불교", "아비달마", "설일체유부"],
      "regex": "부파\\s*불교|아비달마",
      "priority": 2
    },
    {
      "target": "후한",
      "patterns": ["후한", "後漢", "동한"],
      "regex": "후한|後漢|동한",
      "priority": 3
    },
    {
      "target": "삼국",
      "patterns": ["삼국", "조위", "曹魏", "위나라"],
      "regex": "삼국|조위|曹魏",
      "priority": 4
    },
    {
      "target": "서진",
      "patterns": ["서진", "西晉"],
      "regex": "서진|西晉",
      "priority": 5
    },
    {
      "target": "동진",
      "patterns": ["동진", "東晉"],
      "regex": "동진|東晉",
      "priority": 6
    },
    {
      "target": "남북조",
      "patterns": ["남북조", "양나라", "진나라", "북위", "북량", "유송", "후위", "북주", "원위", "고제", "부진", "남당", "梁", "陳"],
      "regex": "남북조|양나라|진나라|북위|북량|유송|후위|원위|고제|부진|5세기|6세기|劉宋|北涼|北魏|後魏",
      "priority": 7
    },
    {
      "target": "수",
      "patterns": ["수나라", "隋"],
      "regex": "수나라|隋",
      "priority": 8
    },
    {
      "target": "당",
      "patterns": ["당나라", "唐"],
      "regex": "당나라|唐|당대",
      "priority": 9
    },
    {
      "target": "오대십국",
      "patterns": ["오대십국", "오대", "십국"],
      "regex": "오대십국|오대|五代",
      "priority": 10
    },
    {
      "target": "송",
      "patterns": ["송나라", "북송", "남송", "宋"],
      "regex": "송나라|북송|남송|宋",
      "priority": 11
    },
    {
      "target": "원",
      "patterns": ["원나라", "元"],
      "regex": "원나라|元",
      "priority": 12
    },
    {
      "target": "명",
      "patterns": ["명나라", "明"],
      "regex": "명나라|明",
      "priority": 13
    },
    {
      "target": "청",
      "patterns": ["청나라", "清"],
      "regex": "청나라|清",
      "priority": 14
    },
    {
      "target": "기타",
      "patterns": ["고려", "신라", "통일신라", "일본", "헤이안", "나라", "티베트", "근대", "20세기"],
      "regex": "고려|신라|일본|헤이안|나라\\s*시대|티베트|근대|20세기",
      "priority": 15
    }
  ],
  "ambiguous_mappings": {
    "대승 초기": "초기불교",
    "대승 초기 (추정)": "초기불교",
    "초기 대승": "초기불교",
    "초기 대승불교": "초기불교",
    "초기 대승 불교": "초기불교",
    "초기불교 또는 대승 초기": "초기불교",
    "후기 초기불교/대승 초기": "초기불교",
    "초기불교 ~ 대승 초기": "초기불교",
    "대승 초기 (7세기)": "당",
    "대승 초기 (밀교 성립기)": "당",
    "대승 초기 ~ 밀교 성립기": "당",
    "대승 초기 ~ 중기": "초기불교",
    "대승 초기 이후": "초기불교",
    "대승 초기 이후 (추정)": "초기불교",
    "대승 초기 또는 중국": "초기불교",
    "대승 초기 또는 중국 불교": "초기불교",
    "대승 초기 또는 중국 번역 시기": "초기불교",
    "대승 초기 또는 이후": "초기불교",
    "대승 초기 또는 밀교 성립 시기": "당",
    "초기불교 또는 부파불교": "부파불교",
    "초기불교 또는 부파불교 시대": "부파불교",
    "초기불교 이후, 부파불교 시대": "부파불교",
    "인도 후기 대승불교": "초기불교",
    "인도 후기 불교": "초기불교",
    "중기 대승 불교": "초기불교",
    "대승불교": "초기불교",
    "대승불교 시대": "초기불교",
    "대승불교 초기": "초기불교",
    "대승불교 전성기": "초기불교",
    "대승불교 성립 이후": "초기불교",
    "대승불교 시대 (추정)": "초기불교",
    "대승불교 시대 이후": "초기불교",
    "대승불교 시대 (정확한 시기 불명)": "초기불교",
    "대승불교 후기": "당",
    "대승불교 후기 (밀교 성립 시기)": "당",
    "대승불교 후기 (밀교 성립 이후)": "당",
    "대승불교 (밀교 성립 이후)": "당",
    "대승불교 이후 (밀교 성립 시기)": "당",
    "대승불교 이후, 밀교 성립 시기": "당",
    "대승 후기/밀교 초기": "당",
    "대승 후기 (밀교)": "당",
    "대승 후기 (밀교 성립 시기)": "당",
    "밀교 성립 이후": "당",
    "후한 시대": "후한",
    "후한 (추정)": "후한",
    "후한 (後漢)": "후한",
    "기원후 3세기 경 (추정)": "삼국",
    "서진 시대": "서진",
    "서진 (西晉)": "서진",
    "동진 시대": "동진",
    "동진 (東晉)": "동진",
    "후진 (後秦)": "남북조",
    "율송 시대": "남북조",
    "중국 당나라": "당",
    "중국 당나라 이후": "당",
    "중국 당나라 이후 (추정)": "당",
    "당나라 (唐)": "당",
    "수나라 (隋)": "수",
    "수당 시대": "당",
    "중국 송나라": "송",
    "중국 명나라": "명",
    "중국 원나라": "원",
    "중국 남북조 시대": "남북조",
    "남북조 시대 (양나라)": "남북조",
    "남북조 시대 (원위)": "남북조",
    "유송 시대": "남북조",
    "후위 시대": "남북조",
    "북위 시대": "남북조",
    "북주 시대": "남북조",
    "후진 시대": "남북조",
    "중국 불교": "미상",
    "중국 (추정)": "미상",
    "중국 (시기 특정 불가)": "미상",
    "중국 불교 (시기 특정 어려움)": "미상"
  },
  "fallback_rules": [
    {"condition": "contains '밀교'", "target": "당"},
    {"condition": "contains '추정'", "action": "extract_dynasty"},
    {"condition": "empty or null", "target": "미상"},
    {"condition": "no match", "target": "미상"}
  ]
}
