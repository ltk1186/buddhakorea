# ==========================================
# Buddha Korea RAG Chatbot - GCP Production Environment
# ==========================================
# Copy this file to .env on the GCP server
# Fill in the actual API keys before deploying

# LLM API Keys (at least one required)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Model Configuration
LLM_MODEL=gemini-2.5-pro
# Alternatives: gemini-2.0-flash-exp, gemini-1.5-flash-002, gpt-4o, claude-3-5-sonnet-20241022

# GCP Gemini Configuration (REQUIRED for embeddings in production)
GCP_PROJECT_ID=gen-lang-client-0324154376
GCP_LOCATION=us-central1
USE_GEMINI_FOR_QUERIES=true

# Vector Database (ChromaDB file-based)
CHROMA_DB_PATH=./chroma_db
CHROMA_COLLECTION_NAME=cbeta_sutras_gemini

# HyDE Configuration
USE_HYDE=false
HYDE_WEIGHT=0.5
HYDE_MODEL=gemini-1.5-flash-002

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# CORS Settings (UPDATE with your actual domain)
ALLOWED_ORIGINS=https://buddhakorea.com,https://www.buddhakorea.com,https://beta.buddhakorea.com

# Rate Limiting
RATE_LIMIT_PER_HOUR=100

# Logging
LOG_LEVEL=info
# Options: debug, info, warning, error

# Retrieval Configuration
TOP_K_RETRIEVAL=10
MAX_CONTEXT_TOKENS=16000

# Chunking Configuration
CHUNK_SIZE=1024
CHUNK_OVERLAP=200

# Performance
MAX_WORKERS=4
BATCH_SIZE=32
